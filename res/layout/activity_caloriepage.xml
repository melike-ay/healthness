<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvnot1"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:text="Calorie and Nutrition Checker"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/etMeal"
            style="@android:style/Widget.DeviceDefault.Light.EditText"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:ems="10"
            android:inputType="text"
            android:text="Enter the food you want to check!" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/resultButton"
                android:layout_width="374dp"
                android:layout_height="70dp"

                android:backgroundTint="#06C32F"
                android:onClick="onClick"
                android:text="Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvnot2"
                android:layout_width="88dp"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text="Results:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/resultCal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:text="Results for 100gr/ml will be shown here"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>